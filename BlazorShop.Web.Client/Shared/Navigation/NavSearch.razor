<EditForm Model="searchModel" OnValidSubmit="Search" method="get" class="search">
    <div class="input-group w-100">
        <InputText @bind-Value="searchModel.Query" type="search" class="form-control" placeholder="搜索" style="width:55%;" />
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </div>
    </div>
</EditForm>
